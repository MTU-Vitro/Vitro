<project name="aiViz" default="all">

	<!-- Source Code   -->
	<property name = "src"           value = "src"                    />
	<property name = "bin"           value = "bin"                    />
	<property name = "dist"          value = "dist"                   />

	<path id = "build.classpath">
		<pathelement path = "${bin}" />
	</path>

	<!-- Libraries     -->
	<property name = "lib"           value = "lib"                    />

	<path id = "lib.classpath">
		<fileset dir = "${lib}">
			<include name = "**/*.jar" />
		</fileset>
	</path>

	<!-- Test Code     -->
	<property name = "test.src"      value = "${src}/test"            />
	<property name = "test.reports"  value = "test"                   />
	<property name = "test.output"   value = "${test.reports}/output" />

	<path id = "test.classpath">
		<pathelement location = "${bin}"          />
		<pathelement location = "${test.reports}" />
		<pathelement location = "${test.output}"  />
		<fileset dir = "${lib}">
			<include name = "**/*.jar" />
		</fileset>
	</path>

	<!-- Documentation -->
	<property name = "doc"           value = "doc"                    />
	<property name = "javadoc"       value = "${doc}/javadoc"         />

	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

	<!-- Clean            -->
	<target name = "clean">
		<delete dir = "${bin}"          />
		<delete dir = "${dist}"         />
		<delete dir = "${test.output}"  />
		<delete dir = "${test.reports}" />
		<delete dir = "${javadoc}"      />
	</target>

	<!-- Make Directories -->
	<target name = "mkdir" depends="clean">
		<mkdir dir = "${bin}"           />
		<mkdir dir = "${dist}"          />
		<mkdir dir = "${test.output}"   />
		<mkdir dir = "${test.reports}"  />
		<mkdir dir = "${javadoc}"       />
	</target>

	<!-- Compile          -->
	<target name = "compile" depends = "mkdir">
		<javac sourcepath  = ""
		       srcdir      = "${src}"
		       destdir     = "${bin}"
			   debug       = "on"
			   debuglevel  = "lines, vars, source"
			   deprecation = "on"
			   includeantruntime = "false">
			<!-- show all warnings -->
			<compilerarg value="-Xlint"/>
			<!-- compile against libraries -->
			<classpath refid = "lib.classpath" />
			<!-- compile default package files, which should eventually be removed  -->
			<include name = "**/*.java" />
		</javac>
	</target>

	<!-- Build JAR        -->
	<target name="build" depends="compile">
		<jar destfile = "${dist}/aiViz.jar"
		     basedir  = "${bin}"
			 excludes = "*.class" />
	</target>

	<!-- JUnit Test       -->
	<target name="junit" depends="compile">
		<!-- perform junit tests           -->
		<junit fork          = "yes" 
			   printsummary  = "no" 
			   haltonfailure = "no"
			   showoutput    = "yes" >
			<batchtest fork  = "yes" 
			           todir = "${test.output}">
				<!-- testing fileset, should eventually be test package -->
				<fileset dir = "${bin}">
					<include name = "**/*Tester.class" />
				</fileset>
			</batchtest>
			<formatter type = "xml" />
			<classpath refid = "test.classpath" />
		</junit>

		<!-- produce html output for tests -->
		<junitreport todir = "${test.reports}">
			<fileset dir = "${test.output}">
				<include name = "TEST-*.xml" />
			</fileset>
			<report todir = "${test.reports}" />
		</junitreport>
	</target>

	<!-- Javadocs         -->
	<target name="javadoc" depends="compile">
		<javadoc destdir     = "${javadoc}"
				 sourcepath  = "${src}"
				 link        = "http://download.oracle.com/javase/6/docs/api/">
			<classpath refid = "test.classpath" />
		</javadoc>
	</target>

	<target name="all" depends="build, junit, javadoc"> 
	</target>

</project>
